<?xml version="1.0" encoding="UTF-8" standalone='yes'?>
<plate>
  <ingredients>
    <templateset name="homepage" name_friendly="Homepage" view="homepage">
      <fields>
        <text name="title" name_friendly="Title" required="1" />
        <wysiwyg_advanced name="content" name_friendly="Intro Text" />
        <images name="image" name_friendly="Main Image" limit="1" />
      </fields>
      <items>
        <item link_title="Homepage" path_part="zesty_home">
          <title><![CDATA[Zesty.io Tutorial]]></title>
          <content><![CDATA[<p>This is a tutorial template made for you to learn Zesty.io</p>]]></content>
          <image><![CDATA[https://raw.githubusercontent.com/ardeay/plate-tutorial/master/shield.png]]></image>
        </item>
      </items>
    </templateset>
  </ingredients>

  <clippings>
    <text name="site_name" name_friendly="Site Name" required="1">
      <![CDATA[Tutorial]]>
    </text>
    <images name="logo" name_friendly="Site Logo" limit="1" />
    <text name="footer_text" name_friendly="Footer Text">
      <![CDATA[Zesty.io Tutorial]]>
    </text>
  </clippings>

  <head>
    <doctype>html5</doctype>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"/>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"/>

  </head>

  <settings>
    <setting category="developer" name="parsley_2_enabled" label="Parsley 2?" type="checkbox"  options="0,1"><![CDATA[0]]></setting>
    <setting category="developer" name="parsley_2_enabled_for_dev" label="Parsley 2 For Stage Dev" type="checkbox" options="0,1"><![CDATA[0]]></setting>
  </settings>


</plate>
